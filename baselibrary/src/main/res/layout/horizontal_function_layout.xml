<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/function_layout_left_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/function_layout_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/function_layout_left_iv"
        android:text=""
        android:textColor="#333333"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/function_layout_right_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_toRightOf="@+id/function_layout_name_tv"
        android:textColor="#333333"
        android:textSize="14dp"
        />

    <com.app.customviewlibrary.CircleImageView
        android:id="@+id/function_action_right_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:padding="5dp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/function_layout_right_iv"
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/function_layout_cut_line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2" />

    <TextView
        android:id="@+id/function_layout_cut_line_alignleft_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/function_layout_name_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:background="#f2f2f2"
        android:visibility="gone" />
</RelativeLayout>