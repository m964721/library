<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/load_pro"
        style="@style/network_custom_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:indeterminateDuration="3000"
        android:visibility="gone" />

    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/load_bg_white"
        android:id="@+id/have_load_layout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/have_load_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/net_party_badge" />

        <TextView
            android:id="@+id/have_load_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="页面加载中"
            android:textColor="#999"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>
