<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/password_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="请输入平台交易密码"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:id="@+id/password_close_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/close" />

    </RelativeLayout>

    <TextView
        style="@style/bleack_line_bg"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_pw1_tv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>


        <TextView style="@style/bleack_vertical_line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_pw2_tv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView style="@style/bleack_vertical_line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_pw3_tv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView style="@style/bleack_vertical_line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_pw4_tv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView style="@style/bleack_vertical_line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_pw5_tv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView style="@style/bleack_vertical_line_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/show_pw6_tv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>

    <TextView style="@style/bleack_line_bg" />

    <TextView
        android:id="@+id/forget_pw_hint_tv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dp_14" />

    <TextView
        style="@style/bleack_line_bg"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_pw_input1_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input2_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input3_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>

    <TextView style="@style/bleack_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_pw_input4_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input5_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input6_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>

    <TextView style="@style/bleack_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_pw_input7_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input8_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input9_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>

    <TextView style="@style/bleack_line_bg" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/show_pw_input_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <TextView
            android:id="@+id/show_pw_input0_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_20" />

        <TextView style="@style/bleack_vertical_line_bg" />

        <RelativeLayout
            android:id="@+id/show_pw_input_delete_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_hint_bg">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true"
                android:src="@mipmap/pw_delete" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>