<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HorizontalActionLayout">
        <attr name="left_action_name" format="string|reference"/>
        <attr name="right_action_name" format="string|reference"/>
        <attr name="left_action_color" format="color"/>
        <attr name="right_action_color" format="color"/>
        <attr name="left_action_size" format="dimension"/>
        <attr name="right_action_size" format="dimension"/>

        <attr name="left_image" format="reference"/>
        <attr name="right_image" format="reference"/>
        <attr name="is_show_left_image" format="boolean"/>
        <attr name="is_show_right_image" format="boolean"/>
        <attr name="line_color" format="color"/>
        <attr name="isShowAllLine" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="need_radius" format="float"/>
    </declare-styleable>

</resources>