<resources >

    <!-- 下一步button 提示样式-->
    <style name="all_next_button"
        parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:background">@drawable/btn_confirm_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- 下一步button 提示样式-->
    <style name="next_button_have_marginTop"
        parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:background">@drawable/btn_confirm_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- 下一步button 提示样式-->
    <style name="small_next_button"
        parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/dp_300</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:background">@drawable/btn_confirm_selector</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item>
    </style>


    <!-- 输入框 提示样式-->
    <style name="ed_input_hint">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!-- 输入框 提示样式-->
    <style name="ed_input_hint_no_margin">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
    </style>
    <!-- 公用的输入框  包裹在layout内 高度由layout定义 -->
    <style name="ed_input_left">
        <item name="android:layout_width">@dimen/dp_300</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">60dp</item>
    </style>
    <!-- 左边距50dp输入框 提示样式-->
    <style name="ed_input_left_50">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">#fff</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- dialog统一样式-->
    <style name="my_dialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowContentOverlay">@null</item>

    </style>

    <!-- 分割线 提示样式-->
    <style name="line_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_dcdcdc</item>
    </style>
    <!-- 分割线 提示样式-->
    <style name="line_10_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:background">@color/color_dcdcdc</item>
    </style>

    <!-- 分割线 提示样式-->
    <style name="line_bg_margin">
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_dcdcdc</item>
    </style>
    <!-- 分割线 提示样式-->
    <style name="dialog_line_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    <style name="vertical_line_bg">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#f2f2f2</item>
    </style>
    <style name="ffffff_line_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="bleack_line_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">#cccccc</item>
    </style>
    <style name="bleack_vertical_line_bg">
        <item name="android:layout_width">2px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#cccccc</item>
    </style>
    <!-- 登录分割线 提示样式-->
    <style name="login_line_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#72B4F7</item>
    </style>

    <!-- 高度固定的输入框 -->
    <style name="ed_input_height">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">#fff</item>
    </style>


    <!--添加银行卡输入框左边提示的文字属性-->
    <style name="add_card_hint_tv">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">#3c3c3c</item>

    </style>


    <style name="network_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="network_custom_progress">
        <item name="android:indeterminateDrawable">@drawable/network_custom_progress</item>
        <item name="android:minWidth">80dip</item>
        <item name="android:maxWidth">80dip</item>
        <item name="android:minHeight">80dip</item>
        <item name="android:maxHeight">80dip</item>
    </style>


    <style name="WidgetProgressBar" parent="android:Widget.ProgressBar">　　
        <item name="android:indeterminateDrawable">@drawable/refresh_view</item>
        <item name="android:indeterminateDuration">600</item>
        <item name="android:minWidth">32dip</item>
        　　
        <item name="android:maxWidth">32dip</item>
        　　
        <item name="android:minHeight">32dip</item>
        　　
        <item name="android:maxHeight">32dip</item>
    </style>
</resources>
